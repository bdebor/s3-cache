{% extends 'base.html.twig' %}

{% block body %}

    <h1>Post list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ render_esi(controller('AppBundle:Default:postNew')) }}
    {% else %}
        <p>
            <a class="btn btn-success" href="{{ path('fos_user_security_login') }}">
                <i class="fa fa-sign-in" aria-hidden="true"></i>login
            </a>
            Ajouter un post
        </p>
    {% endif %}

{% endblock %}
