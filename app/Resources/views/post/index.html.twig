{% extends 'base.html.twig' %}

{% block body %}

    <h1>Post list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for post in post %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ render_esi(url('post_new')) }}

{% endblock %}
